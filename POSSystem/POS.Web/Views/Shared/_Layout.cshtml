<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(45deg, #ff9900, #ff7700);
            --hover-gradient: linear-gradient(45deg, #ffaa33, #ff8800);
        }
        
        body {
            background-color: #fff5e6;
        }
        
        .navbar {
            background: var(--primary-gradient) !important;
            box-shadow: 0 2px 10px rgba(255, 153, 0, 0.2);
        }
        
        .navbar-brand {
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        
        .nav-link {
            position: relative;
            margin: 0 0.25rem;
            padding: 0.75rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateY(-1px);
        }
        
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            font-weight: 500;
        }
        
        .nav-link .bi {
            margin-right: 0.5rem;
            font-size: 1.1rem;
        }
        
        .main-content {
            padding: 1rem;
            background: linear-gradient(135deg, #fff5e6 0%, #fff 100%);
        }
        
        @@media (max-width: 991.98px) {
            .nav-link {
                margin: 0.25rem 0;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="d-flex flex-column vh-100">
    <!-- Modern Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <i class="bi bi-fire me-2" style="font-size: 1.4rem;"></i>
                <span>POS System</span>
            </a>
            <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    @{
                        var controller = ViewContext?.RouteData?.Values["Controller"]?.ToString();
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(controller == "Sale" ? "active" : "")" 
                           asp-controller="Sale" asp-action="Index">
                            <i class="bi bi-cart-fill"></i>
                            <span>ขายสินค้า</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(controller == "Product" ? "active" : "")" 
                           asp-controller="Product" asp-action="Index">
                            <i class="bi bi-box-fill"></i>
                            <span>สินค้า</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center @(controller == "Report" ? "active" : "")" 
                           asp-controller="Report" asp-action="Index">
                            <i class="bi bi-graph-up-arrow"></i>
                            <span>รายงาน</span>
                        </a>
                    </li>
                </ul>
                
                <!-- User Profile -->
                <div class="ms-auto d-flex align-items-center">
                    <div class="nav-link text-white d-flex align-items-center">
                        <i class="bi bi-person-circle me-2"></i>
                        <span>Admin</span>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid flex-grow-1 main-content p-3">
        <main role="main" class="h-100">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>