<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Reset margins and paddings */
        body {
            margin: 0;
            padding: 0;
        }

        .navbar {
            margin-bottom: 0;
        }

        .container-fluid {
            margin: 0;
            padding: 0;
        }

        main {
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body class="d-flex flex-column vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">POS System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav nav nav-tabs border-0">
                    <li class="nav-item">
                        <a class="nav-link text-white @Html.IsActive("Sale", "Index")" asp-controller="Sale"
                            asp-action="Index">
                            🛍️ ขายสินค้า
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle @Html.IsActive("Product")"
                            data-bs-toggle="dropdown" href="#" role="button">
                            📦 สินค้า
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">รายการสินค้า</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="Create">เพิ่มสินค้า</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">หมวดหมู่</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle @Html.IsActive("Report")"
                            data-bs-toggle="dropdown" href="#" role="button">
                            📊 รายงาน
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Report" asp-action="Sales">รายงานการขาย</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Report" asp-action="Products">รายงานสินค้า</a>
                            </li>
                            <li><a class="dropdown-item" asp-controller="Report" asp-action="Summary">สรุปยอดขาย</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid flex-grow-1 p-0">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>